            android:id="@+id/motivoNoLavado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text_RecaudoEmpresaS"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="RECAUDO EMPRESA: "
            android:layout_marginLeft="5dp"
            android:textColor="#34495E"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/recaudoEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textViewEquipoDeVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EQUIPO QUIEN LAVAVEHÍCULO:"
            android:layout_marginLeft="5dp"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textSize="14sp"
            android:textColor="#34495E"
            android:textStyle="bold"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/EquipoQuienLavaVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/fechaInicioDescargueS"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="FECHA INICIO DESCARGUE: "
                android:layout_marginLeft="5dp"
                android:textColor="#34495E"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/fechaInicioDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/fechaFinDescargueS"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="FECHA FIN DESCARGUE: "
                android:layout_marginLeft="5dp"
                android:textColor="#34495E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fechaFinDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/EquiposDeDescargue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="EQUIPOS ENCARGADOS DE LA OPERACIÓN:"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/equiposEncargadosOperacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lineaEstadoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/estadoS"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="ESTADO VEHÍCULO: "
                android:layout_marginLeft="5dp"
                android:textColor="#34495E"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/estad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>




